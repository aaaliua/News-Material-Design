<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="circulprogress">
        <attr name="mdimes" format="float"></attr>
        <attr name="mcolor" format="color"></attr>
        <attr name="mangel" format="integer"></attr>
        <attr name="msweep" format="integer"></attr>
    </declare-styleable>
    <!-- 类似google play 引导 -->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PullRefreshLayout">
        <attr name="type" format="enum">
            <enum name="circles" value="0" />
            <enum name="water_drop" value="1" />
            <enum name="ring" value="2" />
        </attr>
        <attr name="colors" format="reference" />
    </declare-styleable>
    <declare-styleable name="FancyButtonsAttrs">
        <attr name="defaultColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textFont" format="string" />
        <attr name="iconFont" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="iconResource" format="integer" />
        <attr name="fontIconResource" format="string" />
        <attr name="fontIconSize" format="dimension" />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="focusColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="horizontal_line" format="boolean" />
    </declare-styleable>

</resources>