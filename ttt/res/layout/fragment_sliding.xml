<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" 
    xmlns:app1="http://schemas.android.com/apk/res/com.example.ttt">

    <LinearLayout
        android:id="@+id/layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:windowContentOverlay="@android:drawable/checkbox_off_background"
        
        >
    <com.aaaliua.view.PagerSlidingTabStrip
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="?colorPrimary"
        app:pstsUnderlineColor="?colorPrimary"
        />
   </LinearLayout>
    
